<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/workings_textview"
        android:text="0"
        android:textSize="64sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/result_textview"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_textview"
        android:text="0"
        android:textSize="64sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/buttons_layout"
        android:layout_margin="16dp" />

    
    
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#BCDEDEDE"
        android:paddingTop="16dp"
        android:id="@+id/buttons_layout">

        <!-- first row  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Button 'C' -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="C"
                android:textSize="32sp"
                android:textColor="@color/white"
                app:backgroundTint="#F71100"
                android:id="@+id/button_c"
                android:layout_margin="12dp"
                />
            <!-- Button '('   -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="("
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#8A3F51B5"
                android:id="@+id/button_open_bracket"
                android:layout_margin="12dp"

                />
            <!-- Button ')'  -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text=")"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#8A3F51B5"
                android:id="@+id/button_close_bracket"
                android:layout_margin="12dp"
                        />
            <!-- Button '/'  -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="/"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#9C27B0"
                android:id="@+id/button_divide"
                android:layout_margin="12dp"
                />
        </LinearLayout>

        <!-- second row  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Button '7' -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="7"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#3F51B5"
                android:id="@+id/button_7"
                android:layout_margin="12dp"
                />
            <!-- Button '8'   -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="8"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#3F51B5"
                android:id="@+id/button_8"
                android:layout_margin="12dp"

                />
            <!-- Button '9'  -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="9"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#3F51B5"
                android:id="@+id/button_9"
                android:layout_margin="12dp"
                />
            <!-- Button '*'  -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="*"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#9C27B0"
                android:id="@+id/button_multiply"
                android:layout_margin="12dp"
                />
        </LinearLayout>

        <!-- third row  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Button '4' -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="4"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#3F51B5"
                android:id="@+id/button_4"
                android:layout_margin="12dp"
                />
            <!-- Button '5'   -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="5"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#3F51B5"
                android:id="@+id/button_5"
                android:layout_margin="12dp"

                />
            <!-- Button '6'  -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="6"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#3F51B5"
                android:id="@+id/button_6"
                android:layout_margin="12dp"
                />
            <!-- Button '-'  -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="-"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#9C27B0"
                android:id="@+id/button_subtract"
                android:layout_margin="12dp"
                />
        </LinearLayout>

        <!-- fourth row  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Button '1' -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="1"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#3F51B5"
                android:id="@+id/button_1"
                android:layout_margin="12dp"
                />
            <!-- Button '2'   -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="2"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#3F51B5"
                android:id="@+id/button_2"
                android:layout_margin="12dp"

                />
            <!-- Button '3'  -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="3"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#3F51B5"
                android:id="@+id/button_3"
                android:layout_margin="12dp"
                />
            <!-- Button '+'  -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="+"
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#9C27B0"
                android:id="@+id/button_add"
                android:layout_margin="12dp"
                />
        </LinearLayout>

        <!-- fifth row  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Button 'AC' -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="AC"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:backgroundTint="#F71100"
                android:id="@+id/button_ac"
                android:layout_margin="12dp"
                />
            <!-- Button '0'   -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="0"
                android:textSize="32sp"
                android:textColor="@color/white"
                app:backgroundTint="#3F51B5"
                android:id="@+id/button_0"
                android:layout_margin="12dp"

                />
            <!-- Button '.'  -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="."
                android:textSize="32dp"
                android:textColor="@color/white"
                app:backgroundTint="#3F51B5"
                android:id="@+id/button_dot"
                android:layout_margin="12dp"
                />
            <!-- Button '='  -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.Design.FloatingActionButton"
                android:text="="
                android:textSize="32sp"
                android:textColor="@color/white"
                app:backgroundTint="#4CAF50"
                android:id="@+id/button_equals"
                android:layout_margin="12dp"
                />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>